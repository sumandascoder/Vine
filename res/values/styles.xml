<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Theme for list view -->
	<color name="text">#FFFFFFFF</color>
	<color name="windowBackground">#79BAEC</color>

	<style name="list_style" parent="@android:style/Theme.Black">
	    <item name="@android:windowBackground">@color/windowBackground</item>
	    <item name="@android:textColor">@color/text</item>         
	</style>
	
	<!-- Dialog boxes in the application -->
	<color name="dialogText">#CD5C5C</color>
	<style name="theme_dialog" parent="@android:style/Theme.Dialog">
	    <item name="@android:textColor">@color/dialogText</item>         
	</style>
</resources>
